local   all         all                                 trust

# Allow all users to connect over the network with valid credentials
host    all         all           <%= ENV['OPENSHIFT_PG_HOST'] %>/32             trust
host    all         all           0.0.0.0/0             trust
host    all         all           ::1/128               md5
